+  _obj = detail::fromSharedPtr(*this, other, typename std::is_same<T, Empty>::type());
 }
 
 template<typename T> inline Object<T>::Object(T* ptr)
@@ -445,7 +445,7 @@ template<typename T> inline boost::shared_ptr<T> Object<T>::asSharedPtr()
